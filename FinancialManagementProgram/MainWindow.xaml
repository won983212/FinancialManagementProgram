<Window x:Class="FinancialManagementProgram.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:FinancialManagementProgram"
        xmlns:md="http://materialdesigninxaml.net/winfx/xaml/themes"
        xmlns:vm="clr-namespace:FinancialManagementProgram.ViewModels"
        xmlns:tabvm="clr-namespace:FinancialManagementProgram.ViewModels.Tabs"
        xmlns:tab="clr-namespace:FinancialManagementProgram.Tabs"
        mc:Ignorable="d"
        WindowStyle="None" ResizeMode="NoResize"
        MouseDown="Window_MouseDown"
        Title="Account Book App" Height="520" Width="960">
    <Window.DataContext>
        <vm:MainViewModel />
    </Window.DataContext>
    <Window.Resources>
        <Style TargetType="{x:Type TextBlock}" BasedOn="{StaticResource DefaultText}" />
        <DataTemplate DataType="{x:Type tabvm:DashboardTabVM}">
            <tab:DashboardTab />
        </DataTemplate>
        <DataTemplate DataType="{x:Type tabvm:AccountManagementTabVM}">
            <tab:AccountManagementTab />
        </DataTemplate>
        <DataTemplate DataType="{x:Type tabvm:TransactionTabVM}">
            <tab:TransactionTab />
        </DataTemplate>
        <DataTemplate DataType="{x:Type tabvm:AnalyzeTabVM}">
            <tab:AnalyzeTab />
        </DataTemplate>
        <DataTemplate DataType="{x:Type tabvm:SettingsTabVM}">
            <tab:SettingsTab />
        </DataTemplate>
    </Window.Resources>
    <Grid Background="{DynamicResource BackgroundColor}">
        <md:Card Width="200" HorizontalAlignment="Left" Background="{DynamicResource CardColor}" UniformCornerRadius="0"/>
        <Button Style="{StaticResource MaterialDesignIconForegroundButton}" 
                Width="40" Height="40" Margin="8" 
                Foreground="{DynamicResource TextColor}"
                HorizontalAlignment="Right" 
                VerticalAlignment="Top" 
                Command="{Binding CloseAppCommand}">
            <md:PackIcon Kind="Close" />
        </Button>
    </Grid>
</Window>
