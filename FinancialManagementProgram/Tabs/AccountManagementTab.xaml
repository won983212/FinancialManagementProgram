<UserControl x:Class="FinancialManagementProgram.Tabs.AccountManagementTab"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:md="http://materialdesigninxaml.net/winfx/xaml/themes"
             xmlns:ctrl="clr-namespace:FinancialManagementProgram.Controls"
             xmlns:api="clr-namespace:FinancialManagementProgram.kftcAPI"
             xmlns:converter="clr-namespace:FinancialManagementProgram.Converters"
             mc:Ignorable="d" 
             d:DesignHeight="520" d:DesignWidth="760">
    <UserControl.Resources>
        <converter:DatetimeDifferenceConverter x:Key="DatetimeDifferenceConverter" />
    </UserControl.Resources>
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="auto"/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="auto"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>
        
        <!-- Top menu -->
        <StackPanel Orientation="Horizontal"
                    Grid.ColumnSpan="2"
                    Margin="20,20,20,40"
                    VerticalAlignment="Top">
            <TextBlock Text="통장 관리"
                       Style="{StaticResource TextblockTabHeader}"
                       VerticalAlignment="Center"
                       Margin="0,0,4,0" />
            <Button Style="{StaticResource MaterialDesignIconForegroundButton}"
                    Foreground="{DynamicResource TextColor}"
                    Width="30" Height="30">
                <md:PackIcon Kind="Add"/>
            </Button>
        </StackPanel>
        
        <!-- Card Control Panel -->
        <md:Card Grid.Row="1" Margin="12,56,12,12" Width="230">
            <Grid Margin="16,95,16,0">
                <Grid.RowDefinitions>
                    <RowDefinition Height="auto"/>
                    <RowDefinition Height="auto"/>
                    <RowDefinition Height="*"/>
                </Grid.RowDefinitions>
                <Grid Margin="0,0,0,16">
                    <TextBlock VerticalAlignment="Center">이번달 수입</TextBlock>
                    <TextBlock HorizontalAlignment="Right"
                               FontWeight="Bold"
                               FontSize="10.5pt"
                               Foreground="{DynamicResource Primary}"
                               Text="{Binding AccountTotalIncoming, StringFormat={}{0:+ #,##원;;없음}}"/>
                </Grid>
                <Grid Grid.Row="1">
                    <TextBlock VerticalAlignment="Center">이번달 지출</TextBlock>
                    <TextBlock HorizontalAlignment="Right"
                               FontWeight="Bold"
                               FontSize="10.5pt"
                               Foreground="{DynamicResource ErrorColor}"
                               Text="{Binding AccountTotalSpending, StringFormat={}{0:- #,##원;;없음}}"/>
                </Grid>
                <StackPanel Orientation="Horizontal" 
                            Grid.Row="2"
                            Margin="0,0,0,8"
                            HorizontalAlignment="Right"
                            VerticalAlignment="Bottom">
                    <Button Style="{StaticResource MaterialDesignFlatButton}"
                            FontSize="9pt" Padding="0" Margin="0,0,16,0">
                        메모편집
                    </Button>
                    <Button Style="{StaticResource MaterialDesignFlatButton}"
                            FontSize="9pt" Padding="0">
                        계좌삭제
                    </Button>
                </StackPanel>
            </Grid>
        </md:Card>
        <ctrl:PayCard Grid.Row="1" 
                      VerticalAlignment="Top"
                      BankAccount="{Binding SelectedValue, Mode=OneWay, ElementName=listAccount}"/>
        
        <!-- Card Information Panel -->
        <md:Card Grid.Row="1" Grid.Column="1" Margin="0,0,12,12">
            <Grid Margin="20,20,20,20" DataContext="{Binding SelectedValue, ElementName=listAccount}">
                <Grid.Resources>
                    <Style x:Key="InfoTitleText" TargetType="{x:Type TextBlock}" BasedOn="{StaticResource {x:Type TextBlock}}">
                        <Setter Property="VerticalAlignment" Value="Center"/>
                        <Setter Property="Foreground" Value="{DynamicResource TextColor}"/>
                    </Style>
                    <Style x:Key="InfoValueText" TargetType="{x:Type TextBlock}" BasedOn="{StaticResource {x:Type TextBlock}}">
                        <Setter Property="VerticalAlignment" Value="Center"/>
                        <Setter Property="HorizontalAlignment" Value="Right"/>
                        <Setter Property="Foreground" Value="{DynamicResource HeaderTextColor}"/>
                        <Setter Property="Grid.Column" Value="1"/>
                    </Style>
                </Grid.Resources>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="auto"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>
                <Grid.RowDefinitions>
                    <RowDefinition Height="auto"/>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="*"/>
                </Grid.RowDefinitions>
                <TextBlock Foreground="{DynamicResource HeaderTextColor}"
                           FontSize="12pt"
                           FontWeight="Bold"
                           Margin="0,0,0,12">
                    <Run Text="{Binding Label, Mode=OneWay}"/>
                    <Run>정보</Run>
                </TextBlock>
                <TextBlock Grid.Row="1" Style="{StaticResource InfoTitleText}">계좌 번호</TextBlock>
                <TextBlock Grid.Row="1" Style="{StaticResource InfoValueText}" Text="{Binding AccountNum}" />
                <TextBlock Grid.Row="2" Style="{StaticResource InfoTitleText}">잔액</TextBlock>
                <TextBlock Grid.Row="2" Style="{StaticResource InfoValueText}" Text="{Binding BalanceAmount, StringFormat={}{0:#,##;-#,##;0} 원}"/>
                <TextBlock Grid.Row="3" Style="{StaticResource InfoTitleText}">계좌 별명</TextBlock>
                <TextBlock Grid.Row="3" Style="{StaticResource InfoValueText}" Text="{Binding AccountAlias}"/>
                <TextBlock Grid.Row="4" Style="{StaticResource InfoTitleText}">은행 이름</TextBlock>
                <TextBlock Grid.Row="4" Style="{StaticResource InfoValueText}" Text="{Binding BankName}"/>
                <TextBlock Grid.Row="5" Style="{StaticResource InfoTitleText}">마지막 동기화</TextBlock>
                <TextBlock Grid.Row="5" Style="{StaticResource InfoValueText}" Text="{Binding LastSyncDate, Converter={StaticResource DatetimeDifferenceConverter}}"/>
                <TextBlock Grid.Row="6" Style="{StaticResource InfoTitleText}">메모</TextBlock>
                <TextBlock Grid.Row="6" Style="{StaticResource InfoValueText}" Text="{Binding Memo}"/>
            </Grid>
        </md:Card>
        
        <!-- Card Listbox -->
        <ListBox x:Name="listAccount"
                 Grid.Row="2" 
                 Grid.ColumnSpan="2"
                 Margin="12,0,0,12"
                 SelectedIndex="{Binding SelectedAccountIndex}"
                 ItemsSource="{Binding BankAccounts, Source={x:Static api:APIDataManager.Current}}">
            <ListBox.ItemsPanel>
                <ItemsPanelTemplate>
                    <StackPanel IsItemsHost="True" Orientation="Horizontal" />
                </ItemsPanelTemplate>
            </ListBox.ItemsPanel>
            <ListBox.Template>
                <ControlTemplate>
                    <ScrollViewer HorizontalScrollBarVisibility="Auto">
                        <ItemsPresenter />
                    </ScrollViewer>
                </ControlTemplate>
            </ListBox.Template>
            <ListBox.ItemTemplate>
                <DataTemplate>
                    <ctrl:PayCard Grid.Row="1" VerticalAlignment="Top" BankAccount="{Binding Mode=OneWay}" />
                </DataTemplate>
            </ListBox.ItemTemplate>
        </ListBox>
    </Grid>
</UserControl>
